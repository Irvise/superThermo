FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nuTilda;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 2E-7;

boundaryField
{
    BotWall
    {
        type            fixedValue;
        value           uniform 0;		
    }
    OtherWalls
    {
        type            fixedValue;
        value           uniform 0;
    }
    Inlet
    {
        type            fixedValue;
        value           uniform 2E-7;
    }
    Outlet
    {
        type            zeroGradient;
    }
    CenterPlane
    {
        type            symmetryPlane;
        value           uniform 0;
    }
}


