FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      funkySetFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


expressions
(
	CreatePressureGradient
	{
		field p;
        globalScopes ( "globalVars" );
		expression "P_inlet+(P_outlet-P_inlet)*(pos().z/L)";
		condition "pos().z<=L";
		keepPatches 1;
	}

);


