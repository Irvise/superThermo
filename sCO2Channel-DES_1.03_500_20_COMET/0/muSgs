FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      muSgs;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -1 0 0 0 0];

internalField   uniform 0.0001;

boundaryField
{
    BotWall1
    {
		type             fixedValue;
		value            uniform 0;
    }
    BotWall2
    {
		type             fixedValue;
		value            uniform 0;
    }
    OtherWalls
    {
		type             fixedValue;
		value            uniform 0;
    }
    Inlet
    {
                type            zeroGradient;
    }
    Outlet
    {
        type            zeroGradient;
    }
}

